@model BSUIR.Chepurok.EducationEpam.UI.Models.LessionsCategoriesViewModel

@{
    ViewBag.Title = "Lessions";
}

<div class="container-layout">
  <div class="parallax bg-white page-section">
    <div class="container parallax-layer" data-opacity="true">
      <div class="media v-middle">
        <div class="media-body">
          <h1 class="text-display-2 margin-none">Лекции</h1>
          <p class="text-light lead">Обзор всех лекций ресурса</p>
        </div>
      </div>
    </div>
  </div>
  <div class="container">
    <div class="page-section">
      <div class="row">
        <div class="col-md-9">
          <div class="panel panel-default paper-shadow" data-z="0.5">
            <div class="panel-body">
              <div class="media media-clearfix-xs">
                <div class="media-left text-center">
                  <div class="cover width-150 width-100pc-xs overlay cover-image-full hover margin-v-0-10">
                    <span class="img icon-block height-130 bg-default"></span>
                    <span class="overlay overlay-full padding-none icon-block bg-default">
                      <span class="v-center">
                        <i class="fa fa-github"></i>
                      </span>
                    </span>
                    <a href="website-course.html" class="overlay overlay-full overlay-hover overlay-bg-white">
                      <span class="v-center">
                        <span class="btn btn-circle btn-white btn-lg"><i class="fa fa-graduation-cap"></i></span>
                      </span>
                    </a>
                  </div>
                </div>
                @foreach (var item in @Model.LessionList)
                {
                  <div class="media-body">
                    <h4 class="text-headline margin-v-5-0"><a href="website-course.html">@item.TitleLession</a></h4>
                    <p class="small">
                      @item.NameCategory
                    </p>
                    <p>@item.Description</p>
                    <hr class="margin-v-8" />
                    <div class="media v-middle">
                      <div class="media-left">
                        <img src="~/Content/images/people/50/guy-9.jpg" alt="People" class="img-circle width-40" />
                      </div>
                      <div class="media-body">
                        <h4>
                          <a href="">@item.NameUser</a>
                          <br />
                        </h4>
                        @item.Place - @item.DateAndTime
                      </div>
                    </div>
                  </div>
                }                
              </div>
            </div>
          </div>

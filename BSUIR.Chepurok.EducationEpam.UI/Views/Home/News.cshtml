@model IEnumerable<BSUIR.Chepurok.EducationEpam.BLL.Entities.NewsEntity>
@{
    ViewBag.Title = "News";
}

<div class="container-layout">
  <div class="parallax bg-white page-section">
    <div class="container parallax-layer" data-opacity="true">
      <div class="media v-middle">
        <div class="media-body">
          <h1 class="text-display-2 margin-none">Новости</h1>
          <p class="text-light lead">Обзор новостей и событий ресурса</p>
        </div>
      </div>
    </div>
  </div>
  <div class="container">
    <div class="page-section">
      <div class="row">
        <div class="col-md-12">
          @foreach (var item in Model)
          {
            <div class="panel panel-default paper-shadow" data-z="0.5">
              <div class="panel-body">
                <div class="media media-clearfix-xs">
                  <div class="media-body">
                    <h4 class="text-headline margin-v-5-0"><a href="website-course.html">@item.Title</a></h4>
                    <p>@item.ContentText</p>
                    <hr class="margin-v-8" />
                    <div class="media v-middle">
                      <div class="media-left">
                        <img src="~/Content/images/people/50/guy-9.jpg" alt="People" class="img-circle width-40" />
                      </div>
                      <div class="media-body">
                        <h4>
                          <a href="">@item.NameUser</a>
                          <br />
                        </h4>
                        @item.Created
                      </div>
                    </div>
                  </div>
                </div>
              </div>
            </div>
          }
          <ul class="pagination margin-top-none">
            <li class="disabled"><a href="#">&laquo;</a></li>
            <li class="active"><a href="#">1</a></li>
            <li><a href="#">2</a></li>
            <li><a href="#">3</a></li>
            <li><a href="#">&raquo;</a></li>
          </ul>
          <br />
          <br />
        </div>        
      </div>
    </div>
  </div>
</div>